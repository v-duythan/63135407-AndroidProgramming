<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="XuLyCong"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Số thứ nhất: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/inputNum1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Mời nhập số "
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Số thứ hai: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/inputNum2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:hint="Mời nhập số "
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnCong"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:onClick="XuLyCong"
            android:text="Cộng" />

        <Button
            android:id="@+id/btnTru"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:onClick="XuLyTru"
            android:text="Trừ" />

        <Button
            android:id="@+id/btnNhan"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:onClick="XuLyNhan"
            android:text="Nhân" />

        <Button
            android:id="@+id/btnChia"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:onClick="XuLyChia"
            android:text="Chia" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="KẾT QUẢ: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/outputKQ"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:enabled="false"
            android:hint="Hiện kết quả"
            android:layout_marginLeft="15dp"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>

